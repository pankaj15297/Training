        <div class="form-group">
          <label> Lastname: </label>
          <input type="text" name="user[lastname]" class="form-control" id="lastname" autocomplete="off" placeholder="Lastname">
          <span id="lastname_error_message" class="text-danger font-weigth-bold" ></span><br>
          <span id="lastname_error_messageone" class="text-danger font-weigth-bold" ></span>
        </div>

        <div class="form-group">
